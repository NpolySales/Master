<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:background="@color/azure"
     >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_gravity="center|center_horizontal"
		android:orientation="horizontal"

		>

		<TextView
			android:id="@+id/prod_sl"
			android:layout_width="44dp"
			android:layout_height="match_parent"
			android:background="@color/yellow"
			android:gravity="center"

			android:text="100"

			android:textColor="@color/white"
			android:textSize="12sp"
			tools:ignore="HardcodedText"/>

		<TextView
			android:id="@+id/adapter_text_title"
			android:layout_width="128dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/btn_elev"
			android:layout_weight="0.6"
			android:paddingBottom="@dimen/btn_elev"
			android:paddingLeft="@dimen/btn_elev"
			android:paddingTop="@dimen/btn_elev"
			android:visibility="gone"
			android:text="product name"
			android:textColor="@android:color/background_dark"
			android:textSize="12sp"
			tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>


		<LinearLayout
			android:id="@+id/horizontalScroll_linear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="7"
			android:gravity="right|end"
			android:orientation="horizontal"
			android:weightSum="7">



			<TextView
				android:id="@+id/prod_uom"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@color/colorAccent"
				android:padding="@dimen/btn_elev"
				android:textAlignment="center"
				android:textColor="@color/white"
				android:textSize="12sp"/>

			<EditText
				android:id="@+id/prod_qnty"

				style="@style/Widget.AppCompat.EditText"
				android:layout_width="@dimen/prodlist_edittext"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:background="@drawable/right_border"
				android:digits="0123456789"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:hint="Qnty"
				android:inputType="number"
				android:maxLength="4"
				android:paddingBottom="@dimen/btn_elev"
				android:paddingTop="@dimen/btn_elev"
				android:text="0"
				android:textAlignment="center"
				android:textColor="@android:color/background_dark"
				android:textDirection="anyRtl"
				android:textSize="12sp"
				android:windowSoftInputMode="adjustPan"
				tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,TextFields,UnusedAttribute"/>

			<EditText
				android:id="@+id/prod_price"

				android:layout_width="@dimen/prodlist_edittext"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:enabled="false"
				android:focusableInTouchMode="true"
				android:hint="Price"
				android:paddingBottom="@dimen/btn_elev"
				android:paddingTop="@dimen/btn_elev"
				android:textAlignment="center"
				android:textColor="@android:color/background_dark"
				android:background="@drawable/right_border"
				android:textDirection="anyRtl"
				android:textSize="12sp"
				tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,TextFields,UnusedAttribute"/>

			<EditText
				android:id="@+id/prodDis"
				style="@style/Widget.AppCompat.EditText"
				android:layout_width="@dimen/prodlist_edittext"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/right_border"
				android:hint="@string/dis"
				android:layout_gravity="end"
				android:textAlignment="textEnd"
				android:inputType="number"
				android:paddingBottom="@dimen/btn_elev"
				android:paddingRight="@dimen/btn_elev"
				android:paddingEnd="@dimen/btn_elev"
				android:maxLength="3"
				android:paddingTop="@dimen/btn_elev"
				android:textSize="12sp"/>

			<EditText
				android:id="@+id/netPrice"
				style="@style/Widget.AppCompat.EditText"
				android:layout_width="@dimen/prodlist_edittext"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/right_border"
				android:enabled="true"
				android:layout_gravity="end"
				android:textAlignment="textEnd"
				android:hint="@string/net"
				android:inputType="numberDecimal"
				android:paddingBottom="@dimen/btn_elev"
				android:paddingTop="@dimen/btn_elev"
				android:paddingRight="@dimen/btn_elev"
				android:paddingEnd="@dimen/btn_elev"
				android:textSize="12sp"/>

			<EditText
				android:id="@+id/progPrcie"
				style="@style/Widget.AppCompat.EditText"
				android:layout_width="@dimen/prodlist_edittext"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/right_border"
				android:enabled="false"
				android:inputType="numberDecimal"
				android:layout_gravity="end"
				android:textAlignment="textEnd"
				android:hint="@string/p_price"
				android:paddingBottom="@dimen/btn_elev"
				android:paddingTop="@dimen/btn_elev"
				android:paddingRight="@dimen/btn_elev"
				android:paddingEnd="@dimen/btn_elev"
				android:textSize="12sp"/>

			<EditText
				android:id="@+id/totalPrice"
				style="@style/Widget.AppCompat.EditText"
				android:layout_width="@dimen/prodlist_edittext"
				android:layout_height="match_parent"
				android:layout_gravity="end"
				android:layout_weight="1"
				android:background="@drawable/right_border"
				android:enabled="false"
				android:hint="@string/total"
				android:inputType="numberDecimal"
				android:paddingBottom="@dimen/btn_elev"
				android:paddingTop="@dimen/btn_elev"
				android:paddingRight="@dimen/btn_elev"
				android:paddingEnd="@dimen/btn_elev"
				android:textAlignment="textEnd"
				android:textSize="12sp"/>


		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_weight="10"
		android:layout_height="wrap_content"
		tools:ignore="InefficientWeight">
	<TextView
		android:id="@+id/prod_code"
		android:layout_width="wrap_content"
		android:layout_weight="4.5"
		android:layout_height="wrap_content"
		android:textColor="@color/white"
		android:background="@color/yellow"
		android:textSize="12sp"
		android:paddingTop="@dimen/btn_elev"
		android:paddingBottom="@dimen/btn_elev"
		android:visibility="visible"
		android:gravity="center"
		android:text="100"
		tools:ignore="HardcodedText,NestedWeights" />
		<TextView
		android:id="@+id/adapter_text_description"
		android:layout_weight="5.5"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="description"

		android:paddingTop="@dimen/btn_elev"
		android:paddingBottom="@dimen/btn_elev"
		android:background="@color/yellow"
		android:textSize="12sp"
		android:textColor="@color/white"
		tools:ignore="HardcodedText,SpUsage" />
	</LinearLayout>

	 
</LinearLayout>
