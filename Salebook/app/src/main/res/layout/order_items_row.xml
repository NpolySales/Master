<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="@color/azure">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:background="@drawable/right_border"
        android:layout_height="wrap_content"
        tools:ignore="InefficientWeight">
        <TextView
            android:id="@+id/p_code"
            android:layout_width="wrap_content"
            android:layout_weight="4.5"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/yellow"
            android:textSize="12sp"
            android:paddingTop="@dimen/btn_elev"
            android:paddingBottom="@dimen/btn_elev"
            android:visibility="visible"
            android:gravity="center"
            android:text="100"
            tools:ignore="HardcodedText,NestedWeights" />
        <TextView
            android:id="@+id/p_desc"
            android:layout_weight="5.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"

            android:paddingTop="@dimen/btn_elev"
            android:paddingBottom="@dimen/btn_elev"
            android:background="@color/yellow"
            android:textSize="12sp"
            android:textColor="@color/white"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/btn_elev"
                  android:paddingBottom="2dp"
                  android:layout_weight="5"
                  android:weightSum="5"
                  >

        <TextView
            android:id="@+id/pid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:background="@drawable/right_border"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="2.2"
            android:background="@drawable/right_border"
            android:padding="10dp"
            android:text="Text"

            android:textSize="12dp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage"/>

        <TextView
            android:id="@+id/uom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/right_border"
            android:gravity="center"
            android:paddingTop="@dimen/btn_elev"
            android:text="UOM"
            android:textAlignment="center"
            android:textSize="12dp"
            tools:ignore="SpUsage"/>

        <EditText
            android:id="@+id/qnty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:background="@drawable/right_border"
            android:enabled="false"
            android:clickable="false"
            android:gravity="end"
            android:inputType="number"
            android:paddingTop="@dimen/btn_elev"
            android:paddingEnd="@dimen/btn_elev"
            android:text="qnty"
            android:textAlignment="textEnd"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            tools:ignore="SpUsage,TextFields"/>

        <EditText
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.7"
            android:background="@drawable/right_border"
            android:clickable="false"
            android:enabled="false"
            android:gravity="end"
            android:inputType="numberDecimal"
            android:paddingEnd="@dimen/btn_elev"
            android:paddingTop="@dimen/btn_elev"
            android:text="Price"
            android:textAlignment="textEnd"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            android:textStyle="bold"

            tools:ignore="SpUsage,TextFields"/>

        <TextView
            android:id="@+id/unittotal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.8"
            android:background="@drawable/right_border"
            android:clickable="false"
            android:enabled="false"
            android:gravity="end"
            android:inputType="numberDecimal"
            android:paddingEnd="@dimen/btn_elev"
            android:paddingTop="@dimen/btn_elev"
            android:text="@string/total"
            android:textAlignment="textEnd"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/sale_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_parent_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>
