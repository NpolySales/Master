<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:paddingBottom="@dimen/btn_elev"

    tools:context="com.metrosoft.arafat.salebook.activity.ProductMain" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:text="@string/pipes_and_fittings"
            android:drawableLeft="@drawable/pipes"
            android:textColor="@color/white"
            android:id="@+id/householdtext"
            android:background="@color/colorAccent"
            tools:targetApi="m"
            tools:ignore="RtlHardcoded" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/pipeVeiw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/householdtext"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:ignore="ObsoleteLayoutParam" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:text="@string/doors"
            android:drawableLeft="@drawable/doors"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:id="@+id/doorText"
            tools:targetApi="m"
            tools:ignore="RtlHardcoded" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/doorview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/doorText"
            android:scrollbars="horizontal"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:ignore="ObsoleteLayoutParam" />
<!--- No need -->
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:text="@string/ceilings"
            android:drawableLeft="@drawable/ic_view_module"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:visibility="visible"
            android:layout_below="@+id/doorview"
            android:id="@+id/ceiling"
            tools:targetApi="m"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />

            <android.support.v7.widget.RecyclerView
            android:id="@+id/ceilingview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/doorview"
            android:visibility="gone"
            android:scrollbars="horizontal"
            tools:ignore="ObsoleteLayoutParam" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:text="@string/tubewells"
            android:drawableLeft="@drawable/tubewell"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:visibility="visible"
            android:layout_below="@+id/doorview"
            android:id="@+id/Tubewell"
            tools:targetApi="m"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Tubewellview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/Tubewell"
            android:visibility="gone"
            android:scrollbars="horizontal"
            tools:ignore="ObsoleteLayoutParam" />


    </LinearLayout>
</RelativeLayout>