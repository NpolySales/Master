<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_header_height"
              android:background="@drawable/npolylogo"
              android:gravity="bottom|start"
              android:orientation="vertical"
              android:backgroundTintMode="screen"

              android:paddingLeft="@dimen/btn_elev"
              android:paddingRight="@dimen/btn_elev"
              android:paddingTop="@dimen/genre"
              android:theme="@style/ThemeOverlay.AppCompat.Dark"
              android:weightSum="1" tools:targetApi="lollipop">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:visibility="gone"
        android:layout_gravity="end"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/salebook_icon"
        tools:ignore="ContentDescription,InefficientWeight,SpUsage" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:backgroundTintMode="multiply"
        android:paddingTop="@dimen/fab_margin"
        android:paddingBottom="@dimen/fab_margin"
        android:layout_height="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:backgroundTintMode="multiply"
            android:background="@color/white"
            android:paddingStart="@dimen/btn_elev"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/user_name"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                tools:ignore="SpUsage" />
            <TextView
                android:id="@+id/user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                tools:ignore="SpUsage" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:backgroundTintMode="multiply"
            android:paddingBottom="@dimen/fab_margin"
            android:paddingStart="@dimen/btn_elev"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/user_email"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"

                android:ems="10"
                android:textColor="@android:color/black"
                android:visibility="gone"
                android:inputType="textPersonName"
                android:text="Name"
                tools:ignore="HardcodedText,TextViewEdits" />
            <TextView
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:ems="10"
                android:textColor="@android:color/black"
                android:inputType="textPersonName"
                android:text="Phone"
                tools:ignore="HardcodedText,TextViewEdits" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

